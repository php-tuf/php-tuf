{
    "name": "php-tuf/php-tuf",
    "description": "PHP implementation of The Update Framework (TUF)",
    "type": "library",
    "require-dev": {
      "phpunit/phpunit": "^8|^9",
      "symfony/phpunit-bridge": "^3|^4|^5",
      "squizlabs/php_codesniffer": "^3"
    },
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.2.0",
        "ext-json": "*"
    },
    "autoload": {
        "psr-4": {
            "Tuf\\": "src/"
        },
        "files": ["src/constants.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "Tuf\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "phpcs": "phpcs --standard=PSR2 ./src ./tests",
        "phpcbf": "phpcbf --standard=PSR2 ./src ./tests",
        "test": "phpunit ./tests",
        "lint": "find src -name '*.php' -exec php -l {} \\;"
    }
}
